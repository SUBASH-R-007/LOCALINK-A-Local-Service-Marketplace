<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.control.*?>
<?import javafx.geometry.*?>
<BorderPane xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.localink.controller.ServicesListController">
    <top>
        <VBox spacing="8">
            <HBox spacing="12" alignment="CENTER_LEFT" styleClass="toolbar">
                <Label text="Localink" styleClass="title" />
                <Label fx:id="categoryTitle" styleClass="subtitle" />
                <Region HBox.hgrow="ALWAYS" />
                <TextField fx:id="searchField" promptText="Search services..." />
                <ComboBox fx:id="sortCombo" promptText="Sort" />
                <Button text="Back" onAction="#onBack" />
            </HBox>
        </VBox>
    </top>
    <center>
        <ListView fx:id="servicesList" />
    </center>
    <bottom>
        <Label fx:id="errorLabel" style="-fx-text-fill: red;" />
    </bottom>
    <padding>
        <Insets top="12" right="12" bottom="12" left="12" />
    </padding>
</BorderPane>

