<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.control.*?>
<?import javafx.geometry.*?>
<BorderPane xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.localink.controller.CustomerDashboardController">
    <top>
        <HBox spacing="12" alignment="CENTER_LEFT" styleClass="toolbar">
            <Label text="Localink" styleClass="title" />
            <TextField fx:id="searchField" promptText="Search services (e.g., Electrician)" HBox.hgrow="ALWAYS" />
            <Button fx:id="searchButton" text="Search" />
        </HBox>
    </top>
    <center>
        <ListView fx:id="resultsList" />
    </center>
</BorderPane>
