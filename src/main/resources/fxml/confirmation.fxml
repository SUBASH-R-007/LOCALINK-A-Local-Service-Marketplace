<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<BorderPane xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.localink.controller.ConfirmationController">
    <top>
        <HBox spacing="12" alignment="CENTER_LEFT" styleClass="toolbar">
            <Label text="Localink" styleClass="title" />
            <Label text="Confirmation" styleClass="subtitle" />
        </HBox>
    </top>
    <center>
        <VBox spacing="12" alignment="CENTER">
            <Label fx:id="confirmationTitle" style="-fx-font-size: 22px; -fx-font-weight: bold;" />
            <Label fx:id="bookingIdLabel" />
            <Label fx:id="serviceLabel" />
            <Label fx:id="providerLabel" />
            <Label fx:id="scheduleLabel" />
            <padding>
                <Insets top="24" right="24" bottom="24" left="24" />
            </padding>
        </VBox>
    </center>
    <bottom>
        <HBox spacing="12" alignment="CENTER_RIGHT">
            <Button text="Go to Categories" onAction="#onGoHome" />
            <padding>
                <Insets top="12" right="12" bottom="12" left="12" />
            </padding>
        </HBox>
    </bottom>
</BorderPane>
