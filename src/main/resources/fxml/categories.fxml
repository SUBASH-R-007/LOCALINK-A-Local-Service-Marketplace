<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.control.*?>
<?import javafx.geometry.*?>
<BorderPane xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.localink.controller.CategoriesController">
    <top>
        <HBox spacing="12" alignment="CENTER_LEFT" styleClass="toolbar">
            <Label text="Localink" styleClass="title" />
            <Label text="Browse Categories" styleClass="subtitle" />
        </HBox>
    </top>
    <center>
        <ListView fx:id="categoryList" />
    </center>
    <bottom>
        <Label fx:id="errorLabel" style="-fx-text-fill: red;" />
    </bottom>
    <padding>
        <Insets top="12" right="12" bottom="12" left="12" />
    </padding>
</BorderPane>
